<launch>
  <!--arguments-->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>

  <!-- TurtleBot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_gmapping.launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!--launch rviz with our file-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rbe3002_lab3)/src/rviz/rbe3002_lab3.rviz"/>

  <!--launch nodes-->
  <node pkg="rbe3002_lab3" name="explorer" type="explorer.py"/>
  <node pkg="rbe3002_lab3" name="path_planner" type="path_planner.py"/>
  <node pkg="rbe3002_lab3" name="nav" type="nav.py"/>
  <node pkg="rbe3002_lab2" name="move" type="move.py"/>
</launch>
